<div class="panel-heading text-center">
    <h3>Create new Employee</h3>
    <a data-toggle="tab" role="tab" href="#employeeList" class="btn btn-lg text-center btn-secondary">Employee List</a>
    <div class="alert alert-danger" id="passMatch" style="display:none">
        Passwords Don't match</div>

</div>
<div class="panel-body">
    <form action="/createUser" method="post">
        <div class="col-md-6">
            <table class="table table-hover">
                <tr>
                    <th>
                        <h4>Name</h4>
                    </th>
                    <td><input type="text" class="form-control " required name="name"></td>
                </tr>
                <tr>
                    <th>
                        <h4>Email</h4>
                    </th>
                    <td><input type="text" class="form-control " required name="email"></td>
                </tr>
                <tr>
                    <th>
                        <h4>Password</h4>
                    </th>
                    <td>
                        <input type="password" class="form-control"
                            pattern="^(?=.*[A-Za-z])(?=.*\d)(?=.*[@$!%*#?&])[A-Za-z\d@$!%*#?&]{8,}$"
                            title="Password needs to have 8 characters, 1 special, uppercase, lowercase character each and a number"
                            name="password" id="pass" placeholder="***********" onkeyup="passCheck()">
                    </td>

                </tr>
                <tr>
                    <th>
                        <h4>Designation</h4>
                    </th>
                    <td><input type="text" class="form-control " required name="designation"></td>
                </tr>
                <tr>
                    <th>
                        <h4>Date of Joining</h4>
                    </th>
                    <td>
                        <input type="date" required name="doj" class="form-control">
                    </td>
                </tr>
                <tr>
                    <th>
                        <h4>Address</h4>
                    </th>
                    <td>
                        <input type="text" required name="address" class="form-control">
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6">
            <table class="table table-hover">
                <tr>
                    <th>
                        <h4>Member ID</h4>
                    </th>
                    <td><input type="text" class="form-control " required name="member_id"></td>
                </tr>
                <tr>
                    <th>
                        <h4>Mobile</h4>
                    </th>
                    <td>
                        <input type="text" name="mobile" required class="form-control" pattern="^[6789]\d{9}$"
                            title="invalid phone number">
                    </td>
                </tr>
                <tr>
                    <th>
                        <h4>Confirm Pass</h4>
                    </th>
                    <td>
                        <input type="text" class="form-control" placeholder="Confirm Password" id="confirm_pass"
                            required onkeyup="passCheck()">
                    </td>
                </tr>
                <tr>
                    <th>
                        <h4>Is Admin?</h4>
                    </th>
                    <td>
                        <select class="form-control " name="superAdmin">
                            <option selected value="false">No</option>
                            <option value="true">Yes</option>
                        </select>
                    </td>
                </tr>
               
                <tr>
                    <th>
                        <h4>Date of Birth</h4>
                    </th>
                    <td>
                        <input type="date" required name="dob" class="form-control">
                    </td>
                </tr>
                <tr>
                    <th>
                        <h4>Gender</h4>
                    </th>
                    <td>
                        <select class="form-control " name="gender">
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                            <option selected value="N/A">Custom/Prefer not to discuss</option>
                        </select>
                    </td>
                </tr>
            </table>
        </div>
        <input type="submit" id="passBtn" class="btn btn-lg btn-block btn-primary" value="Create Admin" />
    </form>
</div>