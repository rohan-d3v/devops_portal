<div class="modal fade" id="deleteTaskModal" tabindex="-1" role="dialog" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h3 style="color:red">WARNING
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                </h3>
            </div>
            <div class="modal-body">
                <h4 class="text-center">Are you sure you want to delete <%- tasklist.name %>?</h4>
                <form action="/deleteTask" method="post">
                    <input type="hidden" name="uid" value=<%- tasklist._id %>>
                    <input type="submit" class="btn btn-lg btn-block btn-danger"
                        value="Delete Task" />
                </form>
            </div>
            <div class="modal-footer">
                <h4 class=" text-center">This Action is irreversible</h4>
            </div>
        </div>
    </div>
</div>