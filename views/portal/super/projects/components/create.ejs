<div class="panel-heading text-center">
    <h3>Create new Project</h3>
    <a data-toggle="tab" role="tab" href="#projectList" class="btn btn-lg text-center btn-secondary">Project
        List</a>
</div>
<div class="panel-body">
    <form action="/createProject" method="post">
        <div class="col-md-6">
            <table class="table table-hover">
                <tr>
                    <th>
                        <h4>Project Name</h4>
                    </th>
                    <td><input type="text" class="form-control " required name="project_name"></td>
                </tr>
                <tr>
                    <th>
                        <h4>Start Date</h4>
                    </th>
                    <td><input type="date" class="form-control " required name="start_date"></td>
                </tr>
            </table>
        </div>
        <div class="col-md-6">
            <table class="table table-hover">
            
                <tr>
                    <th>
                        <h4>Description</h4>
                    </th>
                    <td><input type="text" class="form-control " required name="project_desc"></td>
                </tr>
                <tr>
                    <th>
                        <h4>End Date</h4>
                    </th>
                    <td><input type="date" class="form-control " required name="end_date"></td>
                </tr>
                <tr>
                    <th>
                        <h4>Assign People</h4>
                    </th>
                    <td>
                        <select id="multiple" class="form-control " name="assignmentList" multiple style="width:100%">
                            <% 
                                    var list=''
                                    for (var i=0; i < userlist.length; i++){
                                        list += '<option value='+userlist[i]._id+'>'+userlist[i].name+'</option>'
                                    }
                                    %>
                            <%- list %>
                        </select>
                    </td>
                </tr>
            </table>
        </div>
        
        <input type="submit" id="passBtn" class="btn btn-lg btn-block btn-primary" value="Create Project" />
    </form>
</div>