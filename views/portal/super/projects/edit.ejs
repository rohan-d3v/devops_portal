<!doctype html>
<html>

<head>
    <%- include('../../partials/head') %>
</head>

<body>
    <!-- WRAPPER -->
    <div id="wrapper">
        <!-- NAVBAR -->
        <%- include('../../partials/navbar') %>
        <!-- END NAVBAR -->

        <div class="container-fluid">
            <div class="main">
                <div class="main-content">
                    <div class="row">
                        <div class="col-md-5">
                            <% if (message.length > 0) { %>
                            <div class="alert alert-info text-center"><%- message %></div>
                            <% } %>
                            
                            <div class="panel">
                                <div class="panel-heading">
                                    <div class="col-md-12 text-center">
                                        <h3 class="display-6 text-center"><%- project.name %></h3>
                                        <h4 class="display-6 text-center"><%- project._id %></h4>
                                        <a href="/manageProjects" class=" btn btn-lg btn-secondary text-center">Go
                                            back</a>
                                    </div>
                                </div>
                                <div class="panel-body" style="margin-top:25%">
                                    <table class="table table-hover">
                                        <input type="hidden" name="uid" value=<%- project._id %>>
                                        <tr>
                                            <th>
                                                <h4>Name</h4>
                                            </th>
                                            <td>
                                                <input type="text" class="form-control input-lg" required
                                                    name="name" value=<%- '"'+project.name+'"' %>>
                                            </td>
                                            <tr>
                                                <th>
                                                    <h4>Assign People</h4>
                                                </th>
                                                <td>
                                                    <select id="multiple" class="form-control input-lg" name="assignmentList" multiple>
                                                        <% 
                                                        var list='', temp = ''
                                                        for (var i=0; i < userlist.length; i++){
                                                            var selected = ''
                                                            var assignedUsers = project.users.map(String)
                                                            if (assignedUsers.includes(userlist[i]._id.toString()))selected = 'selected'
                                                            list += '<option '+selected+' value='+userlist[i]._id+'>'+userlist[i].name+'</option>'
                                                        }
                                                        %>
                                                        <%- list %>
                                                    </select>
                                                </td>
                                                <%- temp %>
                                            </tr>
                                        </tr>
                                    </table>
                                    <input type="submit" class="btn btn-lg btn-block btn-primary"
                                        value="Update Project" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <%- include('components/deleteModal') %>
                </div>
            </div>
            <!-- END MAIN CONTENT -->
        </div>
        <!-- END MAIN -->

        <div class="clearfix"></div>
        <%- include('../../partials/footer') %>
    </div>
    <!-- END WRAPPER -->
    <%- include('../../partials/scripts') %>
    
</body>

</html>