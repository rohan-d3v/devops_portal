<!doctype html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <style>
        
        
    </style>
</head>

<body>

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Topbar -->
        <%- include('./partials/navbar') %>
        <!-- End of Topbar -->
        <!-- Sidebar -->
        <%- include('./partials/sidebar') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div class="container-fluid">
            <div class="main">
                <div class="main-content">
                    <div class="row">


                        <!-- Content -->
                        <div class="col-md-12">
                            <% if (message.length > 0) { %>
                            <div class="alert alert-info text-center"><%= message %></div>
                            <% } %>
                            <div id="leftSpacer"></div>
                            <div class="col-md-12" id="left">
                                <div class="card">
                                    <div class="panel">
                                        <div class="panel-heading text-center">
                                            <h3>Your Task Summary</h3>
                                        </div>
                                        <div class="panel-body">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <% var count1 = count2 = count3 = count4 = 0
                                                    for(i = 0; i < tasklist.length; i++){
                                                        if(tasklist[i].status  == "Yet to start") count1++
                                                        if(tasklist[i].status  == "In Progress") count2++
                                                        if(tasklist[i].status  == "QA & Review") count4++
                                                        if(new Date(tasklist[i].end_date) < new Date()){
                                                            if(tasklist[i].status != "QA & Review" && tasklist[i].status != "Completed" )
                                                                count3++
                                                        }
                                                    }
                                                    %>
                                                    <div class="metric">
                                                        <span class="icon"  id="tProgress"><i class="fa fa-clock-o"></i></span>
                                                        <p>
                                                            <span class="number"><%- count2 %></span>
                                                            <span class="title">Tasks in progress</span>
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="metric">
                                                        <span class="icon"><i class="fa fa-info-circle"></i></span>
                                                        <p>
                                                            <span class="number"><%- count1 %></span>
                                                            <span class="title">Tasks yet to begin</span>
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="metric">
                                                        <span class="icon" id="tOverdue"><i class="fa fa-exclamation-triangle"></i></span>
                                                        <p>
                                                            <span class="number"><%- count3 %></span>
                                                            <span class="title">Tasks Overdue</span>
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="metric">
                                                        <span class="icon" id="tReview"><i class="fa fa-eye"></i></span>
                                                        <p>
                                                            <span class="number"><%- count4 %></span>
                                                            <span class="title">Tasks Under Review</span>
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="panel">
                                        <div class="panel-heading text-center">
                                            <h3>Your Calendar Summary</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End of Content -->

                    </div>
                </div>
            </div>
            <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->

        <!-- footer -->
        <%- include('./partials/footer') %>
        <!-- end footer -->

        <!-- scripts -->
        <%- include('./partials/scripts') %>
        <!-- end scripts -->
</body>

</html>