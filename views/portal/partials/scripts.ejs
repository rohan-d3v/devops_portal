<script type="text/javascript">
    $('#timeCheckBtn').change(function (e) {
        e.preventDefault();
        var inOutTrack = 'out'
        if (this.checked) inOutTrack = 'in'
        $.post("/timeTracker", {
            timeTrack: new Date().toLocaleTimeString(),
            inOutTrack: inOutTrack
        }).complete(function () {
            console.log("Success");
        });
    });
</script>
<script>
    $(function () {
        if ($(document).width() >= 1048) {
            fullWindowSpacer();
            $('#sidebarToggle').on('click', function () { fullWindowSpacer(); });
        }
        else {
            smallWindowSpacer()
            $('#sidebarToggle').on('click', function () { smallWindowSpacer() });
        }
    })

    function fullWindowSpacer() {
        if (!$('#sideBtn').hasClass('is_active')) {
            if ($('#left').hasClass('col-md-12')) {
                $('#left').removeClass('col-md-12').addClass('col-md-10')
                $('#leftSpacer').addClass('col-md-2')
            }
        }
        else {
            if ($('#left').hasClass('col-md-10')) {
                $('#left').removeClass('col-md-10').addClass('col-md-12')
                $('#leftSpacer').removeClass('col-md-2')
            }
        }
    }
    function smallWindowSpacer() {
        if ($('#sideBtn').hasClass('is_active')) {
            if ($('#left').hasClass('col-md-12')) {
                $('#left').removeClass('col-md-12').addClass('col-md-10')
            }
        }
        else {
            if ($('#left').hasClass('col-md-10')) {
                $('#left').removeClass('col-md-10').addClass('col-md-12')
            }
        }
    }
</script>